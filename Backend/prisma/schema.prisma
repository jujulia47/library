generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Book {
  id          String    @id @default(uuid())
  title       String   
  author      String
  image       String
  category    String
  rating      String
  created_at  DateTime
  flags       FlagsArray[]
  @@map("books")
}

model FlagsArray {
  id          String   @id @default(uuid())
  flag        String 
  created_at  DateTime
  books       Book[]
  @@map("flags")
}


