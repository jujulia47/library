// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Book {
  id          String    @id @default(uuid())
  title       String   
  author      String
  category    String
  language    String
  library     Boolean @default(false)
  finish      Boolean @default(false)
  date        String
  image       String
  rating      String
  flags       FlagsArray[]
  quotes      QuotesArray[]
  created_at  DateTime
  @@map("books")
}

model FlagsArray {
  id          String   @id @default(uuid())
  flag        String 
  created_at  DateTime
  books       Book[]
  @@map("flags")
}

  model QuotesArray {
    id            String   @id @default(uuid())
    quote         String 
    quoteId       String
    book          Book @relation(fields: [quoteId], references: [id])
    created_at    DateTime
    @@map("quotes")
  }


